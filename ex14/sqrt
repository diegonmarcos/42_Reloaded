#include <stdio.h>

int ft_sqrt(int nb) {
    if (nb <= 0) {  // Handle non-positive input directly
        return 0;
    }

    double low = 0;
    double top = nb;
    double mid;

    while (top - low > 0.001) { // Precision check
        mid = (low + top) / 2;
        double square = mid * mid;

        if (square > nb) {
            top = mid;        // Square is too big, adjust upper bound
        } else {
            low = mid;        // Square is too small or perfect, adjust lower bound
        }
    }
    
    // Optional rounding for better accuracy
    mid = mid + 0.0005; // Add a small value to round to the nearest integer

    return (int)mid;       // Return the integer part
}

int main(void) {
    printf("%d\n", ft_sqrt(15));
    return 0;
}

